@using UdemyCarBook.Dtos.BrandDtos
@model ResultBrandDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Update Brand</h4>
                        <p class="card-subtitle mb-4">
                            Please fill in all fields appropriately.
                        </p>

                        <form method="post" asp-area="Admin" asp-controller="Brand" asp-action="UpdateBrand">
                            <input type="hidden" asp-for="BrandId" />
                            <div class="form-group">
                                <label asp-for="Name">Brand Name</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>
            </div>
        </div>
    </div>
</div>
