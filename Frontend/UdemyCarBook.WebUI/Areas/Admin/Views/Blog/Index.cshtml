@using UdemyCarBook.Dtos.BlogDtos
@model List<ResultAllBlogWithAuthor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blogs</h4>
                        <p class="card-subtitle mb-4">

                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Auhtor</th>
                                        <th>Created Date</th>
                                        <th>Update</th>
                                        <th>Delete</th>
                                        <th>Visit Blog</th>
                                        <th>Comments</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;

                                        <tr>
                                            <th>@count</th>
                                            <th>@item.Title</th>
                                            <td>@item.AuthorName</td>
                                            <td>@item.CreatedDate</td>
                                            <td><a asp-area="Admin" asp-controller="Blog" asp-action="UpdateBlog" asp-route-id="@item.BlogId" class="btn btn-success">Update</a></td>
                                            <td><a href="/Admin/Blog/DeleteBlog/@item.BlogId" class="btn btn-danger">Delete</a></td>
                                            <td><a href="#" class="btn btn-primary">Visit Blog</a></td>
                                            <td><a href="#" class="btn btn-info">Comments</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a asp-area="Admin" asp-controller="Blog" asp-action="CreateBlog" class="btn btn-primary">Create Blog</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->

        </div>

    </div>
</div>

