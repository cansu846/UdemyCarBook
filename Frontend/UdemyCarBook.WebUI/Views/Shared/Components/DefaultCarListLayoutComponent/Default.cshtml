@using UdemyCarBook.Dtos.CarDtos
@model List<ResultCarDto>
@{
    var count = 0;
}

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">What we offer</span>
                <h2 class="mb-2">Feeatured Vehicles</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">
                    @foreach (var item in Model)
                    {
                        count++;

                        <div class="item">
                            <div class="car-wrap rounded ftco-animate">
                                <div class="img rounded d-flex align-items-end" style="background-image: url(@item.coverImage);">
                                </div>
                                <div class="text">
                                    <h2 class="mb-0"><a href="#">@item.brandName</a></h2>
                                    <div class="d-flex mb-3">
                                        <span class="cat">@item.model</span>
                                        <p class="price ml-auto">$500 <span>/day</span></p>
                                    </div>
                                    <p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Book now</a>
                                        <a asp-controller="Car" asp-action="CarDetail" asp-route-carId="@item.carId" class="btn btn-secondary py-2 ml-1">Details</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        if (count == 5)
                        {
                            break;
                        }
                    }
                  
                </div>
            </div>
        </div>
    </div>
</section>
