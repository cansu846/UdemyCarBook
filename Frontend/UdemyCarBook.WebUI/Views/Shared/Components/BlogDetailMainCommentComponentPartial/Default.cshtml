@using UdemyCarBook.Dtos.BlogDtos
@model List<ResultBlogWithCommentByBlogIdDto>

<h3 class="mb-5">@Model.Count Comments</h3>
<ul class="comment-list">
    @foreach(var item in Model)
    {
        <li class="comment">
            <div class="">
                <img src="/carbook-master/images/person_1.jpg" alt="Image placeholder" style="width:70px; height:70px; border:0;">
            </div>
            <div class="comment-body">
                <h3>@item.name</h3>
                <div class="meta">@(((DateTime) item.createdDate).ToString("mm-dd-yyyy"))</div>
                <p>@item.description</p>
                <p><a href="#" class="reply">Reply</a></p>
            </div>
        </li>

    }

</ul>